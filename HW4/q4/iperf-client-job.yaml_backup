apiVersion: batch/v1
kind: Job
metadata:
  name: iperf-overlay-client
spec:
  template:
    metadata:
      labels:
        app: iperf-overlay-client
    spec:
      containers:
      - name: iperf-overlay-client
        image: jmarhee/iperf:latest
        command: ["iperf", "-c", "iperf-overlay-server", "-t", "300","-i","300"]
      restartPolicy: Never
  backoffLimit: 4
